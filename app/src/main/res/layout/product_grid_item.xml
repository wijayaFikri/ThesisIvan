<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/gridItem_shopping_cardView"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        app:cardElevation="1dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/gridItem_shopping_image"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@drawable/form_background" />
            <TextView
                android:layout_marginTop="16dp"
                android:id="@+id/gridItem_shopping_productName"
                android:paddingHorizontal="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="product_name"/>
            <TextView
                android:layout_marginTop="16dp"
                android:id="@+id/gridItem_shopping_productPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:paddingHorizontal="16dp"
                android:textColor="@color/colorPrimary"/>
            <TextView
                android:id="@+id/gridItem_shopping_productVendor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="vendor_name"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:drawableStart="@drawable/ic_store_black_64dp"
                android:drawableTint="@color/transparentBlack"
                android:layout_marginBottom="8dp"
                android:paddingHorizontal="16dp"/>
            <Button
                android:id="@+id/gridItem_shopping_addButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:text="Add to Cart"
                android:textColor="#ffffff"
                android:background="@drawable/login_button_background"
                android:layout_marginBottom="16dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>